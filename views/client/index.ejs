            <% if (projet.length <= 8) { %>
            <% projet.forEach(data => { %>
            <a href="/vue/<%- data.idProjet%>">
                <div class="cart">
                    <div class="image">
                        <img src="<%- data.Cp_photo%> " alt="">
                    </div>
                    <div class="titre">
