</div>
<% if (locals.user !== undefined && locals.user.message != '') { %>
<div id="recs">
    <div class="message">
        <p><%- locals.user.message %> </p>
        <a class="btn-primary" href="/recu_message/<%- locals.user.message %>">OK Bien recu</a>
    </div>
</div>
<% } %>
<script>
    var modal = document.querySelector('#recs');
    var btn = document.querySelector('#message');
    var active = false
    //    var btnx = document.querySelector('.stop')

  
    btn.addEventListener('click', () => {
        if (active == false) {
            modal.style.display = "block";
            active = true
        } else {
            modal.style.display = "none";
            active = false
        }
    })
    /*btnx.addEventListener('click', () => {
           modal.style.display = "none"
      })*/
</script>
