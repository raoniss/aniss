<%- include('../../inc/admin_header.ejs')  %>

<body>
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <%- include ('../../inc/admin_navbar') %>
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="index.html"> <img alt="image" src="/assets/image/img/logo.png" class="header-logo" />
                        </a>
                    </div>
                    <div class="sidebar-user">

                        <div class="sidebar-user-details">
                            <div class="user-name">Sarah Smith</div>
                            <div class="user-role">Administrator</div>
                        </div>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Main</li>
                        <li class="dropdown ">
                            <a href="#" class="nav-link has-dropdown"><i data-feather="users"></i>
                                <span>Utilisateur</span></a>
                            <ul class="dropdown-menu">
                                <li class="active"><a class="nav-link" href="/admin/user">utilisateurs</a></li>
                                <li><a class="nav-link" href="/admin/user_proj">lanceur de projet</a></li>
                            </ul>
                        </li>
                        <li class="dropdown active">
                            <a href="#" class="nav-link has-dropdown"><i data-feather="briefcase"></i>
                                <span>Projet</span></a>
                            <ul class="dropdown-menu">
                                <li class="active"><a class="nav-link" href="#">projet</a></li>
                                <li><a class="nav-link" href="/admin/campagne">campagne</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i data-feather="anchor"></i>
                                <span>Autre</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" href="/admin/categorie">Categorie</a></li>
                                <li><a class="nav-link" href="/admin/pays">Pays</a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
            </div>
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-body">

                    </div>
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">

                            <div class="card">
                                <div class="card-header">
                                    <h4>Liste des projets</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table filterTable table-bordered" data-filtering="true" data-sorting="true"
                                            data-paging="true" data-paging-size="5">
                                            <thead>
                                                <tr>
                                                    <th data-bs-toggle="true">Titre</th>
                                                    <th>Description</th>
                                                    <th data-hide="all">Cagnotte</th>
                                                    <th data-hide="all">Categorie</th>
                                                    <th data-hide="all">Createur</th>
                                                    <th data-hide="all">Etat</th>
                                                    <th data-hide="all">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% projet.forEach(data => { %>

                                                <tr>
                                                    <td data-hide="all"><%- data.Pj_titre %> </td>
                                                    <td data-hide="all"><%- data.Pj_description %> </td>
                                                    <td data-hide="all"><%- data.Pj_cagnotte %> </td>
                                                    <td data-hide="all"><%- data.Pj_categorie %> </td>
                                                    <td data-hide="all"><%- data.Pj_createur %> </td>
                                                    <td data-hide="all"><%- data.Pj_active %> </td>
                                                    <td data-hide="all">
                                                        <a href="/projet/voir/<%- data.idProjet %>" class="btn btn-icon btn-primary"><i
                                                                data-feather="eye"></i></a>
                                                    <% if (data.Pj_active == 'false') { %>
                                                        <a href="/projet/valider/<%- data.idProjet %>" class="btn btn-icon btn-danger"><i
                                                            data-feather="x"></i></a>
                                                        <% } else  { %>
                                                            <a href="/projet/no_valider/<%- data.idProjet %>" class="btn btn-icon btn-success"><i
                                                                data-feather="check"></i></a>
                                                    <% } %>
                                                   <!--<a href="/user/enable/<%- //data.idUtilisateur %>" class="btn btn-icon btn-danger"><i data-feather="lock"></i></a>
                                                    <a href="/user/desable/<%- //data.idUtilisateur %>" class="btn btn-icon btn-success"><i data-feather="unlock"></i></a>
                                                --> 
                                                       
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- add content here -->
            </div>
            </section>
            <%- include('../../inc/setting.ejs')  %>
        </div>
        <footer class="main-footer">
            <div class="footer-left">
                Copyright &copy; 2019 <div class="bullet"></div> Design By <a href="#">Redstar</a>
            </div>
            <div class="footer-right">
            </div>
        </footer>
    </div>
    </div>
    <!-- General JS Scripts -->
    <script src="/assets/temp/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="/assets/temp/bundles/footable-bootstrap/js/footable.js"></script>
    <!-- Page Specific JS File -->
    <script src="/assets/temp/js/page/footable-data.js"></script>
    <!-- Template JS File -->
    <script src="/assets/temp/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="/assets/temp/js/custom.js"></script>
</body>


